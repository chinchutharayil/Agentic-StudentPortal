@page "{id:int}"
@model StudentPortal.Pages.Students.DeleteModel
@{
    ViewData["Title"] = "Delete Student";
}

<h1>Delete Student</h1>

<h3>Are you sure you want to delete this student?</h3>

<div>
    <h4>Student Details</h4>
    <hr />
    <dl>
        <dt>ID</dt>
        <dd>@Model.Student?.Id</dd>
        
        <dt>Name</dt>
        <dd>@Model.Student?.Name</dd>
        
        <dt>Email</dt>
        <dd>@Model.Student?.Email</dd>
        
        <dt>Age</dt>
        <dd>@Model.Student?.Age</dd>
        
        <dt>Enrollment Date</dt>
        <dd>@Model.Student?.EnrollmentDate.ToString("yyyy-MM-dd")</dd>
    </dl>
    
    <form method="post">
        <button type="submit">Delete</button>
        <a asp-page="Index">Cancel</a>
    </form>
</div>
